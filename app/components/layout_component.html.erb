<%= page_block(as: :nav) do %>
  <%= stack(direction: :horizontal, gap: 4, class_name: 'justify-between') do %>
    <%= stack(direction: :horizontal, gap: 4, valign: :center) do %>
      <%= button(id: "nav-login", variant: :ghost, href: root_path) do %>
        BJJ Rolls
      <% end %>
      <%= button(id: "nav-login", variant: :ghost, href: gyms_path) do %>
        Gyms
      <% end %>
    <% end %>


    <%= stack(direction: :horizontal, gap: 4) do %>
      <% if user.present? %>
        <%= button(id: "nav-logout", variant: :secondary, href: destroy_user_session_path) do %>
          Log out
        <% end %> 
      <% else %>
        <%= button(id: "nav-login", variant: :secondary, href: new_user_session_path) do %>
          Log in
        <% end %>

        <%= button(id: "nav-signup", href: new_user_registration_path) do %>
          Sign up
        <% end %>
      <% end %>
      <% end %>
  <% end %>
<% end %>
  
<%= content_block(as: :main) do %>
  <%= content%>
<% end %>
